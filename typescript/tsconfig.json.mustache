{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "./types/",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "traceResolution": false,
    "skipLibCheck": true,
    "types" : ["node"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "types",
    "dist"
  ]
}
